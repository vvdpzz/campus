!!!
%html
%head
	- @title = "匿名告白" unless @title
	%title= "心动了 － #{@title}"
	= stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
	= stylesheet_link_tag 'compiled/print.css', :media => 'print'
	/[if IE]
		= stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
	= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js'
	= javascript_include_tag 'http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.10/jquery-ui.min.js'
	= javascript_include_tag :defaults, :cache => true
	= csrf_meta_tag

%body.two-col.bp
	#container
		#header
			#header-top
				#logo=link_to '', root_url
				= yield :campus
			- if notice
				#notice= notice
		#content
			= yield
		#sidebar
			= yield :sidebar
		#foot
