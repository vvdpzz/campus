= form_for(@school) do |f|
  - if @school.errors.any?
    #error_explanation
      %h2
        = pluralize(@school.errors.count, "error")
        prohibited this school from being saved:
      %ul
        - @school.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label '学校全名'
    %br/
    = f.text_field :name
  .field
    = f.label '学校英文缩写'
    %br/
    = f.text_field :abbr
  .field
    = f.label '学校网址'
    %br/
    = f.text_field :website
  .actions
    = f.submit '提交'