= form_for([school,boom]) do |f|
  - if boom.errors.any?
    #error_explanation
      %h2
        = pluralize(boom.errors.count, "error")
        prohibited this boom from being saved:
      %ul
        - boom.errors.full_messages.each do |msg|
          %li= msg
  .field
    %span 我在看一个
    = f.radio_button :gender, true, :checked => true
    %span 女生
    = f.radio_button :gender, false
    %span 男生， 发型是
    = f.text_field :hair
    %span ， 地点在
    = f.text_field :location
  .field
    %span{:style => 'vertical-align: top'} 煽情
    = f.text_area :flirt, :rows => 6
    = f.submit '喵～ 喵～', :style => 'vertical-align: top'