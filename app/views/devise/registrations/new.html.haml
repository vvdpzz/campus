%h2 注册
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.label '电子邮箱'
    %br/
    = f.text_field :email
  %p
    = f.label '密码'
    %br/
    = f.password_field :password
  %p
    = f.submit "注册"
    |
    = link_to "登录", new_session_path(resource_name)
